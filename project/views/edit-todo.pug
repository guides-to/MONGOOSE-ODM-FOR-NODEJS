extends layout

block content
  h4.col-md-6.offset-md-3.mt-4 Edit TODO

  form.col-md-6.offset-md-3(action=`/todo/${todo.id}/edit`, method="post")
    .form-group
      label(for="title") Title
      input.form-control(type="text", name="title", id="title", required, value=todo.title)
    .form-group
      button.btn.btn-dark.btn-block(type="submit") Submit